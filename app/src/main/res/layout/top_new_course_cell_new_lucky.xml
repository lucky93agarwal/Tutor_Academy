<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_course_card"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentLeft="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/redlight"
            android:weightSum="1">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.40">
                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#fff"
                            android:padding="10dp"
                            android:id="@+id/image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icon1"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.60">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Teacher Name"
                            android:textColor="@color/white"
                            android:fontFamily="@font/google_sans_regular"
                            android:textSize="17dp"
                            android:layout_marginLeft="3dp"
                            android:textAllCaps="true"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1"/>
                        <TextView
                            android:id="@+id/subject_of_tutor"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/google_sans_regular"
                            android:text="Math"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/subject_of_ex"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/google_sans_regular"
                            android:text="Math"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/subject_of_quali"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/google_sans_regular"
                            android:text="Math"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginTop="7dp"
                            android:layout_below="@id/name"
                            android:layout_marginHorizontal="5dp">

                            <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RatingBar
                                    android:id="@+id/topCourseRating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:progressTint="@color/golden"
                                    android:rating="4"
                                    android:stepSize="1.0" />



                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/newid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/subject_of_tutor_new"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/google_sans_regular"
                        android:text="Math"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/time_of_tutor_new"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/google_sans_regular"
                        android:text="Math"
                        android:textColor="@color/white"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/msg_of_tutor_new"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/google_sans_regular"
                        android:text="Math"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"

                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/databtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Accept"
                            android:background="@color/blue"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/cancelbtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Decline"
                            android:background="@color/red"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>